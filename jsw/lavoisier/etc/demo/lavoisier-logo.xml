<config xmlns="http://software.in2p3.fr/lavoisier/config.xsd" version="16">
    <view name="logo">
        <info>
            <category>Main</category>
            <description>The logo of Lavoisier</description>
        </info>
        <argument name="ratio" path-format="value" pattern="\d+">100</argument>
        <argument name="hair" path-format="name_value">grey</argument>
        <connector type="XMLConnector">
            <parameter name="content" eval="document('rsc/logo.svg')"/>
        </connector>
        <processors xmlns:svg="http://www.w3.org/2000/svg">
            <element in="svg:svg">
                <!-- use ratio to change height and width -->
                <attribute in="height">concat(substring-before(., 'px') * number($ratio div 100), 'px')</attribute>
                <attribute in="width">concat(substring-before(., 'px') * number($ratio div 100), 'px')</attribute>
                <!-- change hair color -->
                <element in="svg:g">
                    <element in="svg:path" if="@id='hair'">
                        <attribute in="fill">$hair</attribute>
                    </element>
                </element>
            </element>
        </processors>
        <renderers>
            <renderer type="DefaultRenderer">
                <parameter name="contentType">image/svg+xml</parameter>
            </renderer>
        </renderers>
    </view>
</config>