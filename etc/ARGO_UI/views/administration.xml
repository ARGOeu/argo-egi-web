            <!--<parameter name="passphrase" eval="property('certificate.password')"/>-->
        </connector>

        <renderers>
            <renderer type="DefaultRenderer">
                <parameter name="template">/ARGO_UI/resources/html/profile_res.html</parameter>
            </renderer>
            <renderer type="HTMLRenderer">
                <parameter name="template">/ARGO_UI/resources/html/profile_res.html</parameter>
            </renderer>
        </renderers>

    </view>


</config>