</view>


    <view name="listParameters">
        <info>
            <description>list of parameters used for the forms, interfaces ...</description>
            <category>ADMIN</category>
        </info>
        <argument name="mode">light</argument>
        <connector type="XMLConnector">
            <!--<parameter name="content" eval="view('listProfilesRaw')"/>-->
            <parameter name="content" eval="new_element('root')"/>
        </connector>
        <processors>
            <processor match="/root" type="InsertProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="new_element('ngis')"/></processor>
            <processor match="/root" type="InsertProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="new_element('sites')"/></processor>
            <processor match="/root" type="InsertProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="new_element('hosts')"/></processor>


            <processor match="/root/ngis" type="InsertProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="view('listNgi')"/></processor>
            <processor match="/root/sites" type="InsertProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="view('listSite')"/></processor>
            <processor match="/root/hosts" type="InsertProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="view('goc.HostList')"/></processor>


            <processor match="/root/ngis/e:entries/e:entry/text()" type="ReplaceProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="concat(',',.)"/></processor>
            <processor match="/root/sites/e:entries/e:entry/text()" type="ReplaceProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="concat(',',.)"/></processor>
            <processor match="/root/hosts/e:entries/e:entry/text()" type="ReplaceProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="nodes" eval="concat(',',.)"/></processor>



            <processor match="/root/ngis/e:entries" type="RemoveProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="depth">2</parameter></processor>
            <processor match="/root/sites/e:entries" type="RemoveProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="depth">2</parameter></processor>
            <processor match="/root/hosts/e:entries" type="RemoveProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="depth">2</parameter></processor>
            <processor match="/root/sf/e:entries" type="RemoveProcessor"><namespaces><entry key="date">http://exslt.org/dates-and-times</entry><entry key="str">http://exslt.org/strings</entry><entry key="e">http://software.in2p3.fr/lavoisier/entries.xsd</entry></namespaces><parameter name="depth">2</parameter></processor>
        </processors>
    </view>

